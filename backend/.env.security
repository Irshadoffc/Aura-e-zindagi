# Security Configuration Template
# Copy these to your .env file

# Database Security
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=aura_e_zindagi
DB_USERNAME=secure_user
DB_PASSWORD=strong_random_password_here

# Application Security
APP_KEY=base64:generate_new_key_with_artisan_key_generate
APP_DEBUG=false
APP_ENV=production
APP_URL=https://yourdomain.com

# Session Security
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# CORS Security
SANCTUM_STATEFUL_DOMAINS=yourdomain.com,www.yourdomain.com
SESSION_DOMAIN=.yourdomain.com

# Payment Gateway Security (Use strong credentials)
JAZZCASH_MERCHANT_ID=your_secure_merchant_id
JAZZCASH_PASSWORD=your_secure_password
JAZZCASH_INTEGRITY_SALT=your_secure_salt_key

EASYPAISA_STORE_ID=your_secure_store_id
EASYPAISA_CREDENTIALS=your_secure_credentials

# Logging Security
LOG_CHANNEL=daily
LOG_LEVEL=warning

# Mail Security (for notifications)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_secure_email
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls

# Frontend URL
FRONTEND_URL=https://yourdomain.com